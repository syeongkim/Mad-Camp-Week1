<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kakao_blue"
    tools:context=".ui.notifications.NotificationsFragment">

    <!-- 1번 Constraint: textDate(datePicker), memoryPic -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nanumbarunpen"
        android:gravity="center_vertical"
        android:text="오늘은 0000-00-00 입니다!"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="calendar"
        android:visibility="gone"
        android:fontFamily="@font/nanumbarunpen"
        android:headerBackground="@color/kakao_blue"
        android:colorControlActivated="@color/kakao_yellow"
        android:colorControlHighlight="@color/kakao_yellow"
        android:textColor="@color/black"
        android:calendarTextColor="@color/black"
        android:selectableItemBackgroundBorderless="@color/kakao_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDate"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/memoryPic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo"
        android:visibility="visible"
        android:fontFamily="@font/nanumbarunpen"
        app:layout_constraintDimensionRatio="H, 17:10"
        app:layout_constraintTop_toBottomOf="@id/datePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/randomButton" />

    <!-- 2번 Constraint: randomButton, textMemory, textMessage -->
    <Button
        android:id="@+id/randomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/kakao_yellow"
        android:text="@string/random"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumbarunpen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memoryPic"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textMemory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumbarunpen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomButton" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumson"
        android:background="@drawable/item_contact_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMemory" />

    <EditText
        android:id="@+id/editMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:fontFamily="@font/nanumbarunpen"
        android:background="@drawable/item_contact_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMessage" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/call"
        android:backgroundTint="@color/kakao_yellow"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumbarunpen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/editMessage"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/message"
        android:backgroundTint="@color/kakao_yellow"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumbarunpen"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editMessage"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>